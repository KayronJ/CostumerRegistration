@model CostumerRegistration.Models.Costumer


@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/Styles.css" />


<section style="background-color: #eee;">
    <div class="container py-6">

        
        <div class="row">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="card-header">
                            <img class="rounded" src="@Url.Content("~/" + Model.Photo)" alt="Customer Photo" style="max-width: 180px; max-height: 180px;" />
                        </div>
                        <div class="row m-2">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Nome)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Nome)</p>
                            </div>
                        </div>
                        <div class="row m-2">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Cnpj)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Cnpj)</p>
                            </div>
                        </div>
                        <div class="row m-2">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Segment)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Segment)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card mb-4"> 
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Cep)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Cep)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Street)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Street)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Complement)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Complement)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Neighborhood)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Neighborhood)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.City)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.City)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.State)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.State)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">@Html.DisplayNameFor(model => model.Number)</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Number)</p>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>